<%= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :image ,label:"画像" %>
  <%= f.input :goods_name ,label:"商品名" ,placeholder: "商品名（最大４０文字まで）" ,maxlenth:40%>
  <%= f.input :content ,label:"説明" ,placeholder:"商品の説明（任意　1,000文字まで)\n(色、素材、重さ、定価、注意点など)\n例) 2010年頃に１万円で購入したジャケットです。ライトグレーで傷はありません。合わせやすいのでオススメです。" ,as: :text %>
  <%= f.input :categories ,label:"カテゴリー" ,collection: @categories %>
  
  <%= f.input :price ,label:"販売" , as: :integer %>
  <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>

  <div class="form-actions">
    <%= f.submit "出品", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
<% end %>
